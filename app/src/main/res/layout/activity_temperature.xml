<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TemperatureActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/temperature_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator">

        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:id="@+id/addTemperatureResultButton"
                android:background="@drawable/roundedbutton"
                android:scaleType="centerCrop"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:adjustViewBounds="true"
                android:contentDescription="Add Temperature Result"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
            android:id="@+id/temperatureResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/temperature_activity_toolbar"
            android:layout_marginTop="15dp">
    </FrameLayout>

</RelativeLayout>